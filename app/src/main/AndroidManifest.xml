        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/SpashScreenTheme">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity
            android:name=".ShowUsersActivity"
            android:exported="false" />
        <activity
            android:name=".StoryActivity"
            android:exported="false" />
        <activity android:name=".AddCommentActivity" />
        <activity android:name=".AddPostActivity" />
        <activity android:name=".LoginActivity">
        </activity>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".AccountSettings" />
        <activity android:name=".AddStoryActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" />
